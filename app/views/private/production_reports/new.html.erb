<div class="container">
<%= content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>»</li>
    <li><%= link_to 'Production Reports', '#' %></li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<%= content_for :submenu do %>
  <%= render :partial => 'menus/jobs_menu', :layout => false %>
<% end %>

<%= form_for [:private, @job, @production_report] do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <br class="clear">
  <hr>
  <%= f.submit "Create Production Report" %>,
  <%#= f.submit "Create and Add Another Gun Sheet", :name => 'submit_and_create_another_gun_sheet' %>
  or
  <%= link_to 'Cancel', private_home_path %>
<% end %>
    </div>
