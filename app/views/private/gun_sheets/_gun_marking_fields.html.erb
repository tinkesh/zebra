<%
  if form.object.gun_marking_category_id.present?
    gun_marking_categories = @job_gun_marking_categories
  else
    gun_marking_categories = @gun_marking_categories
  end
%>

<div class="span-14 append-bottom">
  <%= form.label :gun_marking_category_id, "Markings Type" %><br>
  <%= form.select :gun_marking_category_id, gun_marking_categories.map {|u| [u.name,u.id]}, {:include_blank => true}, :style=> "width: 300px" %>
</div>

<div class="span-2 append-bottom">
  <%= form.label :amount, "Amount" %>
  <%= form.text_field :amount, :class => "span-2" %>
</div>

<br class="clear">
