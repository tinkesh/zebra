<div class="span-6 append-bottom">
  <%= form.label :equipment_make, "Make" %><br>
  <%= form.text_field :equipment_make, :class => "span-6", :required => true %>
</div>


<div class="span-6 append-bottom">
  <%= form.label :equipment_model, "Model" %><br>
  <%= form.text_field :equipment_model, :class => "span-6", :required => true %>
</div>

<div class="span-6 append-bottom">
  <%= form.label :equipment_year, "Year" %><br />
  <%= form.text_field :equipment_year, :class => "span-6" %>
</div>

<div class="span-6 append-bottom">
  <%= form.label :name, "Equiptment Type" %><br>
  <%= form.text_field :name, :class => "span-6", :required => true %>
</div>

<br class="clear">


<div class="span-6 append-bottom">
  <%= form.label :unit, "Unit Number" %><br />
  <%= form.text_field :unit, :class => "span-6" %>
</div>

<div class="span-6 append-bottom">
  <%= form.label :plate_number, "Plate Number" %><br />
  <%= form.text_field :plate_number, :class => "span-6" %>
</div>

<div class="span-6 append-bottom last">
  <%= form.label :vin, "VIN" %><br />
  <%= form.text_field :vin, :class => "span-6" %>
</div>

<div class="span-6 append-bottom">
  <%= form.label :color, "Color" %><br />
  <%= form.select :color, Equipment::COLORS, :class => "span-6", :include_blank => true %>
</div>

<div class="span-6 append-bottom">
  <%= form.label :gvw, "GVW (Gross Vehicle Weight)" %><br />
  <%= form.text_field :gvw, :class => "span-6" %>
</div>

<br class="clear">

<div class="span-6 append-bottom">
  <%= form.label :registration_date, "Registration Date" %><br />
  <%= form.text_field :registration_date, :class => "span-6", :data => {:role => 'datepicker'}, :readonly => true %>
</div>

<div class="span-6 append-bottom">
  <%= form.label :cvip_date, "CVIP Date" %><br />
  <%= form.text_field :cvip_date, :class => "span-6", :data => {:role => 'datepicker'}, :readonly => true %>
</div>

<br class="clear">

<div class="span-6 append-bottom">
  <%= form.label :rate, "Daily Rate" %><br />
  <%= form.text_field :rate, :class => "span-6" %>
</div>

<div class="span-6 append-bottom">
  <%= form.label :yellow_rate, "Yellow Rate" %><br />
  <%= form.text_field :yellow_rate, :class => "span-6" %>
</div>


<div class="span-6 append-bottom">
  <%= form.label :white_rate, "White Rate" %><br />
  <%= form.text_field :white_rate, :class => "span-6" %>
</div>

<br class="clear">
<p>
  <%= label_tag :job_assets, "Add document" %><br>
  <%= file_field_tag('equipment_assets_image', multiple: true, name: "equipment[assets_attributes][][image]") %>
</p>

<br class="clear">
