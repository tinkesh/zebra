<ol class="noprint">
  <% if permitted_to? :show, :private_jobs -%>
    <li><%= active_link_to "Show", private_job_path(@job), :active => { :when => :self_only } %></li>
  <% end %>
  <% if permitted_to? :update, :private_jobs -%>
    <li><%= active_link_to "Edit", edit_private_job_path(@job) %></li>
  <% end %>
  <% if permitted_to? :create, :private_time_sheets -%>
    <li><%= active_link_to "New Time Sheet", new_private_time_sheet_path(:job_id => @job.id) %></li>
  <% end %>
  <% if permitted_to? :create, :private_gun_sheets -%>
    <li><%= active_link_to 'New Gun Sheet', new_private_job_gun_sheet_path(:job_id => @job.id) %></li>
  <% end %>
  <% if permitted_to? :create, :private_load_sheets -%>
    <li><%= link_to "New Load Sheet", new_private_load_sheet_path %></li>
  <% end %>
  <% if permitted_to? :create, :private_job_sheets -%>
    <li><%= active_link_to 'New Job Sheet', new_private_job_job_sheet_path(:job_id => @job.id) %></li>
  <% end %>
  <% if permitted_to? :create, :private_material_reports -%>
    <li><%= active_link_to 'New Material Report', new_private_job_material_report_path(:job_id => @job.id) %></li>
  <% end %>
  <% if permitted_to? :create, :private_material_report_summaries -%>
    <li><%= active_link_to 'New M. Report Summary', new_private_job_material_report_summary_path(:job_id => @job.id) %></li>
  <% end %>
  <% if permitted_to? :create, :private_jobs -%>
    <li><%= active_link_to 'New Job on Hand', new_private_job_path %></li>
  <% end %>
  <% if permitted_to? :read, :private_reconciliation_summaries -%>
    <li><%= active_link_to 'R. Summary', private_job_reconciliation_summary_path(@job.id) %></li>
  <% end -%>
</ol>
